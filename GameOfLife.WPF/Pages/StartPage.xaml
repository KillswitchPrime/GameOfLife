<Page x:Class="GameOfLifeWPF.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameOfLifeWPF"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1480"
      Title="Start Page">
    <Canvas Background="Coral">
        <Button Name="StartGameOfLife" BorderBrush="Black" BorderThickness="2" Click="OnClickGameOfLife" ClickMode="Press" Width="200" Height="200" Canvas.Top="300" Canvas.Left="100" FontSize="20" FontWeight="Bold" Background="Gold">Start Game Of Life</Button>
        <Button Name="StartBriansBrain" BorderBrush="Black" BorderThickness="2" Click="OnClickBriansBrain" ClickMode="Press" Width="200" Height="200" Canvas.Top="300" Canvas.Left="500" FontSize="20" FontWeight="Bold" Background="DarkCyan">Start Brians Brain</Button>
        <DockPanel>
            <Frame x:Name="_NavigationFrame" NavigationUIVisibility="Hidden"/>
        </DockPanel>
    </Canvas>
</Page>
